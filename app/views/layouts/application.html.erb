<!DOCTYPE html>
<html>
  <head>
    <title>Chuck Norris Facts</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light primary-nav">
          <%= link_to 'Chuck Norris Facts', root_path, class:'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to 'Home', facts_path, class:'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'New Fact', new_fact_path, class:'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Get a Random Fact', fact_path('random'), class:'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Top 10 Facts', facts_top10_path, class:'nav-link' %>
              </li>
            </ul>
          </div>
        </nav>
      <%= yield %>
    </div>
  </body>
</html>
